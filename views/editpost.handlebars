<section class="header">
    <h1 class="pl-3">My Dashboard</h1>
</section>
<section class="post">
    <section class="post-header">
        <h3 class="title">Edit Post</h3>
    </section>

    <form class="form content edit-form">
        <label for="post-title">Title:</label>
        <section class="mb-3">
            <input type="text" name="title" id="edit-title" class="form-input" value={{post.title}}>
        </section>
        <label for="post-content">Content:</label>
        <section class="mb-3">
            <textarea name="content" cols="30" rows="10" id="edit-content" class="form-input">{{post.content}}</textarea>
        </section>
        <button type="submit" class="submit-btn btn mb-3" id="edit-btn">Edit Post</button>
        <button type="submit" class="submit-btn btn" id="delete-btn">Delete Post</button>
    </form>
</section>

<script src="/js/update.js"></script>